      },
      {
        "pagePath": "pages/order/order",
        "text": "购物车",
        "iconPath": "/images/tab/shoop.jpg",
        "selectedIconPath": "/images/tab/shoop_selected.jpg"
      },
      {
        "pagePath": "pages/profile/profile",
        "text": "我的",
        "iconPath": "/images/tab/me.jpg",
        "selectedIconPath": "/images/tab/me_selected.jpg"
