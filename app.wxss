body {
  font-family: Arial, sans-serif;
  background-color: #e6f7ff;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.product-image {
  width: 100%;
  height: auto;
  border-radius: 10rpx;
}

.product-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

/* 后续选择器保持闭合大括号 */
.product-name {
  font-size: 32rpx; /* 增大字体 */
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333; /* 深色文字 */
}
.product-price {
  font-size: 30rpx;
  color: #ff6600; /* 橙色价格 */
}
.order-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: white;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1); /* 卡片阴影 */
}
.order-info {
  margin-left: 20rpx;
}
.order-status {
  font-size: 26rpx;
  color: #999;
}
.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}
.user-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}